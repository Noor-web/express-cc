<!DOCTYPE html>
<html lang="en">
<head>
  <title>Put Your Opinion</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-6 my-5">
            <div class="card card-body">
                <h4>Title: <%= poll.title %></h4>
                <p>Description: <%= poll.description %></p>
                <div class="my-3">
                    <h5>Result:</h5>
                    <ul class="list-group">
                        <% for(let r of result) { %>
                            <li class="list-group-item">
                                <p>
                                    <%= r.name %> ---> <strong><%=r.percentage %></strong>
                                </p>
                            </li>
                        <% } %>
                    </ul>
                </div>
                <div class="my-4">
                    <h5>What is your opinion</h5>
                    <form action="/polls/<%= poll._id %>" method="POST">
                        <% for(let option of poll.options) { %>
                            <div class="custome-control custom-radio">
                                <input type="radio" name="option" id="<%= option._id %>" class="custom-control-input" value="<%= option._id %>">
                                <label class="custom-control-label" for="<%= option._id %>"><%= option.name %></label>
                            </div>
                        <% } %>
                        <input type="submit" value="Submit Your Opinion" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>